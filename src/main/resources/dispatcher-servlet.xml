        <!--&lt;!&ndash; Maximum file size to keep in memory &ndash;&gt;-->
        <!--<property name="maxInMemorySize" value="50000"/>-->
    <!--</bean>-->

    <bean id="multipartResolver"
          class="org.springframework.web.multipart.support.StandardServletMultipartResolver">
    </bean>


</beans>